<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Owner Section</title>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

  <!-- Include Remix Icon CDN -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="font-['Roboto']">
    <nav class="w-full px-5 py-3 ">
      <h3 class="text-xl">Scatch</h3>
      <div class="flex gap-5 w-full px-5 py-3 flex justify-end">
        <a class="text-red-600" href="/owners/logout">logout</a>
      </div>
    </nav>
<div class="w-full h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex flex-col">
            <!-- Navigation Links -->
            <a class="block w-fit mb-2" href="/owners">All Products</a> <!-- Route to all products -->
            <a class="block w-fit mb-2" href="/owners/admin">Create new product</a> <!-- Route to create product -->
        </div>
    </div>

    <div class="w-[75%] flex flex-col gap-5 h-screen">
        <!-- Delete All Products Link -->
        <a class="text-red-500" href="/products/deleteAll">Delete all</a>

        <!-- Product Display Section -->
        <div class="flex items-start gap-5">
        <% products.forEach(function(product){ %>
            <div class="w-60 ">
                <div class="w-full rounded-t-md h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                    <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                        alt="">
                </div>
                <div
                    class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                    <div>
                        <h3>
                            <%= product.name %>
                        </h3>
                        <h4>â‚¹ <%= product.price %>
                        </h4>
                    </div>
                    <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/edit/<%= product._id %>">
                        <!-- Solid black icon with black background -->
                        <i class="ri-pencil-line text-black p-2 rounded-full"></i> <!-- Pencil icon -->
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
